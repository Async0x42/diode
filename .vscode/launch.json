  "version": "0.2.0",
  "configurations": [
    {
      "name": "Client",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/client",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "pnpm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "Server",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "pnpm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    }
  ],
  "compounds": [
    {
      "name": "All",
      "configurations": ["Server", "Client"]
    }
  ]
}
