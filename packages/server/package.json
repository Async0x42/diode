{
  "name": "@diode/server",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "build": "tsc --project ./",
    "lint": "run-s lint:all:*",
    "lint:all:eslint": "pnpm run lint:eslint",
    "lint:all:prettier": "pnpm run lint:prettier",
    "lint:eslint": "eslint --fix --ext .js,.ts .",
    "lint:prettier": "prettier --write --loglevel warn **/*.{js,ts,json,md}",
    "db-debug": "mikro-orm debug",
    "create-schema": "mikro-orm schema:create -r",
    "generate:cache": "mikro-orm cache:generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Async0x42/diode.git"
  },
  "author": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/Async0x42/diode/issues"
  },
  "homepage": "https://github.com/Async0x42/diode#readme",
  "dependencies": {
    "@diode/common": "workspace:*",
    "@mikro-orm/cli": "^4.5.5",
    "@mikro-orm/core": "^4.5.5",
    "@mikro-orm/reflection": "^4.5.5",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@mikro-orm/sqlite": "^4.5.5",
    "cors": "^2.8.5",
    "dotenv-extended": "^2.9.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "sqlite3": "^5.0.2",
    "ts-node": "^9.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.6.5",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/node": "^15.3.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "eslint": "^7.26.0",
    "eslint-plugin-prettier": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.4.0-dev.20210519"
  },
  "mikro-orm": {
    "useTsNode": true,
    "tsConfigPath": "./tsconfig.orm.json",
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
